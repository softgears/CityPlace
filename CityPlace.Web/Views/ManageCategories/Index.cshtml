
@using CityPlace.Web.Classes.Ext
@model System.Collections.Generic.List<CityPlace.Domain.Entities.Category>

@{
    ViewBag.Title = "Список категорий";
    Layout = "../Shared/AccountLayout.cshtml";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="icon"><i class="icon20 i-cabinet"></i></div>
            <h4>Категории</h4>
            <a href="#" class="minimize"></a>
        </div>
        <!-- End .panel-heading -->

        <div class="panel-body">
            <p>
                <a href="/categories/add" class="btn btn-primary tip" title="Создать новую публикаию">Создать новую категорию</a>
            </p>
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>ИД</th>
                        <th>Название</th>
                        <th>Описание</th>
                        <th>Создана</th>
                        <th>Отредактирована</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6">Нет категорий в системе</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var category in Model)
                        {
                            <tr>
                                <td>
                                    @category.Id
                                </td>
                                <td>
                                    @category.Title
                                </td>
                                <td>
                                    @category.Description
                                </td>
                                <td>
                                    <span class="tip" title="@category.DateCreated.FormatDateTime()">@category.DateCreated.TimeAgo()</span>
                                </td>
                                <td>
                                    <span class="tip" title="@category.DateModified.FormatDateTime()">@category.DateModified.TimeAgo()</span>
                                </td>
                                <td style="width: 90px">
                                    <a href="/categories/@category.Id/edit" class="btn btn-xs btn-warning tip" title="Редактировать категорию"><i class="i-enter"></i></a>
                                    <a href="/categories/@category.Id/delete" class="btn btn-xs btn-danger tip" onclick="return confirm ('Вы действительно хотите удалить указанную категорию?')" title="Удалить категорию"><i class="i-remove"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    
                </tbody>
            </table>
        </div>
        <!-- End .panel-body -->
    </div>
</div>