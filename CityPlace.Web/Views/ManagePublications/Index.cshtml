@using CityPlace.Web.Classes.Ext
@model System.Collections.Generic.List<CityPlace.Domain.Entities.Publication>

@{
    ViewBag.Title = "Список публикаций";
    Layout = "../Shared/AccountLayout.cshtml";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="icon"><i class="icon20 i-bell"></i></div>
            <h4>Публикации</h4>
            <a href="#" class="minimize"></a>
        </div>
        <!-- End .panel-heading -->

        <div class="panel-body">
            <p>
                <a href="/publications/add" class="btn btn-primary tip" title="Создать новую публикаию">Создать новую публикацию</a>
            </p>
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>ИД</th>
                        <th>Заголовок</th>
                        <th>Аннотация</th>
                        <th>Категория</th>
                        <th>Дата публикации</th>
                        <th>Создана</th>
                        <th>Отредактирована</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="8">Нет публикаций в системе</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var publication in Model)
                        {
                            <tr>
                                <td>
                                    @publication.Id
                                </td>
                                <td>
                                    @publication.Title
                                </td>
                                <td>
                                    @publication.Annotation
                                </td>
                                <td>
                                    @publication.Category
                                </td>
                                <td>
                                    @publication.PublicationDate.FormatDate()
                                </td>
                                <td>
                                    <span class="tip" title="@publication.DateCreated.FormatDateTime()">@publication.DateCreated.TimeAgo()</span>
                                </td>
                                <td>
                                    <span class="tip" title="@publication.DateModified.FormatDateTime()">@publication.DateModified.TimeAgo()</span>
                                </td>
                                <td style="width: 90px">
                                    <a href="/publications/@publication.Id/edit" class="btn btn-xs btn-warning tip" title="Редактировать публикацию"><i class="i-enter"></i></a>
                                    <a href="/publications/@publication.Id/delete" class="btn btn-xs btn-danger tip" onclick="return confirm ('Вы действительно хотите удалить указанную публикацию?')" title="Удалить публикацию"><i class="i-remove"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    
                </tbody>
            </table>
        </div>
        <!-- End .panel-body -->
    </div>
</div>